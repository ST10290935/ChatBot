<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mental Health Support Chat</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 119, 198, 0.2) 0%, transparent 50%);
            animation: float 20s ease-in-out infinite;
        }

       

        .chat-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            box-shadow: 
                0 32px 64px rgba(0, 0, 0, 0.15),
                0 16px 32px rgba(0, 0, 0, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.8);
            width: 100%;
            max-width: 800px;
            height: 80vh;
            max-height: 600px;
            display: flex;
            flex-direction: column;
            position: relative;
            z-index: 10;
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
        }

       

        .chat-header {
            padding: 32px 32px 24px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.08);
            text-align: center;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
            border-radius: 24px 24px 0 0;
        }

        .chat-title {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 8px;
            letter-spacing: -0.02em;
        }

        .chat-subtitle {
            color: #64748b;
            font-size: 1rem;
            font-weight: 500;
            opacity: 0;
            animation: fadeIn 1s ease-out 0.3s forwards;
        }

       

        .chat-box {
            flex: 1;
            padding: 24px 32px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 16px;
            scroll-behavior: smooth;
        }

        .chat-box::-webkit-scrollbar {
            width: 6px;
        }

        .chat-box::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.05);
            border-radius: 10px;
        }

        .chat-box::-webkit-scrollbar-thumb {
            background: rgba(0, 0, 0, 0.2);
            border-radius: 10px;
            transition: background 0.2s;
        }

        .chat-box::-webkit-scrollbar-thumb:hover {
            background: rgba(0, 0, 0, 0.3);
        }

        .msg {
            max-width: 70%;
            padding: 16px 20px;
            border-radius: 20px;
            font-size: 0.95rem;
            line-height: 1.5;
            position: relative;
            animation: messageSlide 0.4s cubic-bezier(0.16, 1, 0.3, 1);
            word-wrap: break-word;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        
        }

        .msg.user {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            align-self: flex-end;
            border-bottom-right-radius: 8px;
            margin-left: auto;
        }

        .msg.ai {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            color: #334155;
            align-self: flex-start;
            border-bottom-left-radius: 8px;
            border: 1px solid rgba(0, 0, 0, 0.08);
        }

        .msg strong {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
            font-size: 0.85rem;
            opacity: 0.9;
        }

        .msg.user strong {
            color: rgba(255, 255, 255, 0.9);
        }

        .msg.ai strong {
            color: #667eea;
        }

        .input-section {
            padding: 24px 32px 32px;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
            border-top: 1px solid rgba(0, 0, 0, 0.08);
            border-radius: 0 0 24px 24px;
        }

        .input-group {
            display: flex;
            gap: 12px;
            align-items: flex-end;
            background: white;
            border-radius: 16px;
            padding: 4px;
            box-shadow: 
                0 8px 24px rgba(0, 0, 0, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(0, 0, 0, 0.08);
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .input-group:focus-within {
            transform: translateY(-2px);
            box-shadow: 
                0 16px 32px rgba(0, 0, 0, 0.15),
                inset 0 1px 0 rgba(255, 255, 255, 0.8);
            border-color: #667eea;
        }

        #userMessage {
            flex: 1;
            border: none;
            padding: 16px 20px;
            font-size: 1rem;
            background: transparent;
            outline: none;
            color: #334155;
            border-radius: 12px;
            font-family: inherit;
            resize: none;
            min-height: 24px;
            max-height: 120px;
        }

        #userMessage::placeholder {
            color: #94a3b8;
            font-weight: 500;
        }

        #sendBtn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 16px 24px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            position: relative;
            overflow: hidden;
        }

        #sendBtn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        #sendBtn:hover::before {
            left: 100%;
        }

        #sendBtn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
        }

        #sendBtn:active {
            transform: translateY(0px);
        }

        #sendBtn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .empty-state {
            text-align: center;
            padding: 48px 24px;
            color: #64748b;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 24px;
            opacity: 0.6;
            animation: pulse 2s ease-in-out infinite;
        }

      

        .empty-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .empty-subtitle {
            font-size: 1rem;
            line-height: 1.6;
            opacity: 0.8;
            max-width: 400px;
        }

        .typing-indicator {
            display: none;
            padding: 16px 20px;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            border-radius: 20px 20px 20px 8px;
            align-self: flex-start;
            max-width: 70%;
            border: 1px solid rgba(0, 0, 0, 0.08);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .typing-dots {
            display: flex;
            gap: 4px;
            align-items: center;
        }

        .typing-dot {
            width: 8px;
            height: 8px;
            background: #667eea;
            border-radius: 50%;
            animation: typingDot 1.4s ease-in-out infinite;
        }

        .typing-dot:nth-child(2) { animation-delay: 0.2s; }
        .typing-dot:nth-child(3) { animation-delay: 0.4s; }

       
            
            .chat-header {
                padding: 24px 20px 16px;
            }
            
            .chat-title {
                font-size: 1.5rem;
            }
            
            .chat-box {
                padding: 16px 20px;
            }
            
            .input-section {
                padding: 16px 20px 24px;
            }
            
            .msg {
                max-width: 85%;
                padding: 12px 16px;
            }
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">
            <h2 class="chat-title">💭 Mental Health Support</h2>
            <p class="chat-subtitle">A safe space to share your thoughts and feelings</p>
        </div>
        
        <div id="chatBox" class="chat-box">
            <div class="empty-state">
                <div class="empty-icon">🌱</div>
                <h3 class="empty-title">Welcome to your safe space</h3>
                <p class="empty-subtitle">I'm here to listen and support you. Feel free to share whatever is on your mind - there's no judgment here, just understanding and care.</p>
            </div>
        </div>
        
        <div class="typing-indicator" id="typingIndicator">
            <div class="typing-dots">
                <div class="typing-dot"></div>
                <div class="typing-dot"></div>
                <div class="typing-dot"></div>
            </div>
        </div>
        
        <div class="input-section">
            <div class="input-group">
                <textarea id="userMessage" placeholder="Share what's on your mind..." rows="1"></textarea>
                <button id="sendBtn">Send</button>
            </div>
        </div>
    </div>

    <script>
        const box = document.getElementById("chatBox");
        const input = document.getElementById("userMessage");
        const btn = document.getElementById("sendBtn");
        const typingIndicator = document.getElementById("typingIndicator");
        
        // Auto-resize textarea
        input.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 120) + 'px';
        });
        
        btn.addEventListener("click", postMessage);
        input.addEventListener("keydown", e => { 
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                postMessage();
            }
        });
        
        async function postMessage() {
            const txt = input.value.trim();
            if (!txt) return;
            
            // Hide empty state
            const emptyState = document.querySelector('.empty-state');
            if (emptyState) {
                emptyState.style.display = 'none';
            }
            
            append("You", txt);
            input.value = "";
            input.style.height = 'auto';
            
            // Show typing indicator
            showTypingIndicator();
            
            btn.disabled = true;
            
            try {
                const res = await fetch("/Chat/SendMessage", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ text: txt })
                });
                const data = await res.json();
                
                // Hide typing indicator
                hideTypingIndicator();
                
                setTimeout(() => {
                    append(data.sender, data.text);
                }, 300);
                
            } catch {
                hideTypingIndicator();
                setTimeout(() => {
                    append("AI", "I'm having trouble connecting right now. Please try again in a moment. Remember, you're not alone in this.");
                }, 300);
            } finally {
                btn.disabled = false;
            }
        }
        
        function showTypingIndicator() {
            typingIndicator.style.display = 'block';
            box.appendChild(typingIndicator);
            box.scrollTop = box.scrollHeight;
        }
        
        function hideTypingIndicator() {
            typingIndicator.style.display = 'none';
        }
        
        function append(sender, text) {
            const msg = document.createElement("div");
            msg.className = sender === "You" ? "msg user" : "msg ai";
            msg.innerHTML = `<strong>${sender}:</strong> ${text}`;
            box.appendChild(msg);
            box.scrollTop = box.scrollHeight;
        }
        
        // Add some encouraging sample messages for demo
        setTimeout(() => {
            if (box.children.length === 1) { // Only empty state
                // You can remove this demo code in production
                /*
                append("AI", "Hi there! I'm here to provide a supportive ear whenever you need it. How are you feeling today?");
                */
            }
        }, 2000);
    </script>
</body>
</html>